<% if attributes["images"] %>
<% images = attributes["images"].split(",") %>
<div class="middle-carousel-wrap">
  <div id="carousel-sec-post" class="carousel slide" data-ride="carousel" data-interval="false">
    <div class="carousel-inner">
      <% images.each do |img| %>
      <div class="item">
        <a class="popup-link" href="<%= img %>">
          <img src="<%= img %>" alt="img">
        </a>
      </div>
      <% end %>
    </div>
    <a class="left carousel-control" href="#carousel-sec-post" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left fa fa-angle-left"></span>
    </a>
    <a class="right carousel-control" href="#carousel-sec-post" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right fa fa-angle-right"></span>
    </a>
  </div>
</div>
<% end %>