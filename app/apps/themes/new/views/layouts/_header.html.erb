<header class="main-header navbar">
	<div class="main-header-menu navbar-collapse collapse">
		<div class="container">
			<ul class="starter-menu">
				<% menu = current_site.nav_menus.find_by_slug('header-menu') %>
				<% if menu %> 
				<% menu.children.includes(:custom_field_values).reorder("term_order asc").each do |item| %>
				<li class="menu-item">
					<a class="menu_link" href="<%= item.description %>"><%= item.name %></a>
				</li>
				<% end %>
				<% end %>
				<li> 
					<a href="#" class="bvi-panel-open">Для людей з вадами зору</a>
				</li>
			</ul>
		</div>
	</div>
	<div class="header-slider-wrap">
	</div>
	<div class="site-logo-wrap">
		<div class="container">
			<div class="prewrapped-middle-header">
				<a class="header-root-url" href="https://rada-uzhgorod.gov.ua">
					<img class="header-logo" src="<%= current_site.the_logo %>" alt="logo">
				</a>
				<%= form_tag(cama_search_new_path, :method => "get", :class => "form-search form-horizontal") do %>
				<div class="input-group">
					<input type="text" name="q" class="form-control" placeholder="Знайти інформацію просто...">
					<div class="input-group-btn">
						<button type="submit" class="btn btn-default"><i style="font-size: 16px;" class="fa fa-search"></i></button>
					</div>
				</div>
				<% end %>

			</div>
		</div>
	</div>
	<div class="header-additional-nav-wrap">
	<a href="#" class="bvi-panel-open"><i class="bvi-glyphicon bvi-glyphicon-eye-close"></i></a>
		<div class="container">
			<div id="navbar-main" class="header-additional-nav">
				<%= raw draw_menu({menu_slug: 'main_menu', container_class: 'nav navbar-nav top-level-menu navbar-collapse collapse'}) %>
				<a class="citizen-btn" href="/e-servisi">Кабінет ужгородця</a>
				
				<a href="#my_menu" class="navbar-toggle" id="custom-menu-collapser">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span> 
				</a>
			</div>
		</div>
	</div>
</header>
