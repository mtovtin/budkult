	</div>
	<script async src="https://www.googletagmanager.com/gtag/js?id=UA-49874554-11"></script>
	<script>
		window.dataLayer = window.dataLayer || [];
		function gtag(){dataLayer.push(arguments);}
		gtag('js', new Date());
		gtag('config', 'UA-49874554-11');
	</script>
</footer>
<nav id="my_menu">
	<%= raw draw_menu({menu_slug: 'main_menu', container_class: '', sub_class: '',  item_class: '', link_class: '', link_class_parent: ''}) %>
</nav>
<script>
	var ready;
	ready = function() {
		$('html').removeAttr('class');
		$.mmenu.glbl = false;
		$("#my_menu").mmenu({
			navbar: {
				title: "Меню",
			},
			footer: {
				add: true,
				content: `
				<%= form_tag(cama_search_path, :method => "get") do %>
				<div class="input-group-btn">
				<button type="submit" class="btn btn-default"><a href=#>Закрити</a></button>
				</div>
				
				<% end %>
				`
			},
			extensions: ["pageshadow"],
			backButton: {
				close: true
			}
		});
	};
	$(document).ready(ready);
</script>