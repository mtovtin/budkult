				<div class="col-md-4 col-sm-4"><img class="footer-logo" src="<%= current_site.the_logo %>" alt="logo"></div>
				<div class="col-md-4 col-sm-4">
					<div class="footer-contacts">
						<%== current_theme.the_field('footer-contacts') %>
						
					</div>
				</div>
				<div class="col-md-4 col-sm-4">
					<div class="footer-copy">
						<%== current_theme.the_field('footer-rights') %>
					</div>
				</div>
			</div> 
		</div>
		<div class="bottom-footer">
			<p><%== current_theme.the_field('footer-development') %></p>
			<p class="suport-and-dev">Розробка <a href="https://www.keepindata.com/" target="_blank"><img style="width:75px; height:30px;" src="<%= theme_asset_url("images/template/keepin-logo.png") %>" alt="keepin"></a></p>
